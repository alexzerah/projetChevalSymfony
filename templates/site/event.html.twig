{% extends 'base.html.twig' %}

    {% block content %}
        <!-- Main -->
        <div id="main" class="alt">
            <!-- One -->
            <section id="one">
                <div class="inner">
                    {% if party %}
                    <header class="major">
                        <h1>{{ party.nom }}</h1>
                    </header>
                    <span class="image main"><img src="{{ asset(party.banner) }}" alt="" /></span>
                        <h3>Prix : {{ party.prix }}€</h3>
                    <h3>Contenu de l'event</h3>
                    <p>{{ party.details }}</p>
                    {% elseif weekend %}
                    <header class="major">
                        <h1>{{ weekend.nom }}</h1>
                    </header>
                    <span class="image main"><img src="{{ asset(weekend.banner) }}" alt="" /></span>
                        <h3>Prix : {{ weekend.prix }}€</h3>
                    <h3>Contenu de l'event</h3>
                    <p>{{ weekend.details }}</p>
                    {% else %}
                    <header class="major">
                        <h1>{{ exhibit.nom }}</h1>
                    </header>
                    <span class="image main"><img src="{{ asset(exhibit.banner) }}" alt="" /></span>
                        <h3>Prix : {{ exhibit.prix }}€</h3>
                    <h3>Contenu de l'event</h3>
                    <p>{{ exhibit.details }}</p>
                    {% endif %}
                </div>
            </section>
        </div>
    {% endblock %}
