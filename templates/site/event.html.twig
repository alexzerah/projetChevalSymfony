{% extends 'base.html.twig' %}

    {% block content %}
        <!-- Main -->
        <div id="main" class="alt">
            <!-- One -->
            <section id="one">
                <div class="inner">
                    {% if party %}
                    <header class="major">
                        <h1>{{ party.name }}</h1>
                        <h2>{{ party.date|date('d-m-Y à H:m') }}</h2>
                    </header>
                    <span class="image main"><img src="{{ asset(party.banner) }}" alt="" /></span>
                        <h3>Prix : {{ party.price }}€ - Lieu : {{ party.location }}</h3>
                    <h3>Contenu de l'event</h3>
                    <p>{{ party.details }}</p>
                    {% elseif weekend %}
                    <header class="major">
                        <h1>{{ weekend.name }}</h1>
                        <h2>Du {{ weekend.date|date('d-m-Y') }} au <p>{{ weekend.endDate|date('d-m-Y') }}</p></p>
                    </header>
                    <span class="image main"><img src="{{ asset(weekend.banner) }}" alt="" /></span>
                        <h3>Prix : {{ weekend.price }}€ - Lieu : {{ weekend.location }}</h3>
                    <h3>Contenu de l'event</h3>
                    <p>{{ weekend.details }}</p>
                    {% else %}
                    <header class="major">
                        <h1>{{ exhibit.name }}</h1>
                        <h2>Le {{ exhibit.date|date('d-m-Y à H:m') }}</h2>
                    </header>
                    <span class="image main"><img src="{{ asset(exhibit.banner) }}" alt="" /></span>
                        <h3>Prix : {{ exhibit.price }}€ - Lieu : {{ exhibit.location }}</h3>
                    <h3>Contenu de l'event</h3>
                    <p>{{ exhibit.details }}</p>
                    {% endif %}
                </div>
            </section>
        </div>
    {% endblock %}
