{% extends 'base.html.twig' %}

    {% block content %}
        <!-- Main -->
        <div id="main" class="alt">
            <!-- One -->
            <section id="one">
                <div class="inner">
                    <header class="major">
                        <h1>Contact</h1>
                        {% for msg in app.flashes('success') %}
                            {{ msg }}
                        {% endfor %}
                    </header>
                    {{ form_start(contactForm, {'attr': {'id': 'contactForm', 'novalidate': 'novalidate'}}) }}
                        <p>
                            {{ form_label(contactForm.name) }}
                            {{ form_widget(contactForm.name) }}
                        </p>
                        <p>
                            {{ form_label(contactForm.email) }}
                            {{ form_widget(contactForm.email) }}
                        </p>
                        <p>
                            {{ form_label(contactForm.subject) }}
                            {{ form_widget(contactForm.subject) }}
                        </p>
                        <p>
                            {{  form_label(contactForm.message) }}
                            {{ form_widget(contactForm.message) }}
                        </p>
                        <p>
                            <button type="submit">Envoyer</button>
                        </p>
                    {{ form_end(contactForm) }}
                    <p><a href="{{ path('home') }}">Retour Ã  l'accueil</a></p>
                </div>
            </section>
        </div>
    {% endblock %}
